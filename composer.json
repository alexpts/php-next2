{
    "name": "alexpts/next2",
    "description": "Micro application for PSR-7",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "middleware",
        "router",
        "routing",
        "psr-7",
        "micro",
        "app"
    ],
    "config": {
        "optimize-autoloader": true
    },
    "authors": [
        {
            "name": "Alexpts",
            "email": "alexpts3@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "~8.1",
        "psr/http-message": "^1.0",
        "alexpts/mutable-psr7": "^0.2.1",
        "psr/http-server-middleware": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PTS\\Next2\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PTS\\Next2\\Test\\": "test"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "bench": "vendor/bin/phpbench run --config=test/phpbench.json --report=aggregate",
        "test": "vendor/bin/phpunit --config=test/phpunit.xml"
    }
}
